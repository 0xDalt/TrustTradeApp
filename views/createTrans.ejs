<body>
  <!--NAVBAR-->
  <%- include partials/nav.ejs %>
  <%- include partials/header.ejs %>
    <div class="form wrapper">
      <form name="Form" action="" method="get">
        <%- include partials/burger-right.ejs %>
          <div class="container my-5">
            <h1>
